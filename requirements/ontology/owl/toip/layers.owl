<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#">

    <owl:Ontology rdf:about="">
        <rdfs:comment>Ontology describing the properties and structure of the Trust Over IP (ToIP) framework.</rdfs:comment>
    </owl:Ontology>

    <!-- ToIP Properties -->
    <owl:Class rdf:ID="ToIPProperty">
        <rdfs:label>ToIP Property</rdfs:label>
        <rdfs:comment>Represents a general property of the ToIP framework.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="DecentralizedSystems">
        <rdfs:subClassOf rdf:resource="#ToIPProperty"/>
        <rdfs:label>Decentralized Systems</rdfs:label>
        <rdfs:comment>Describes the decentralization characteristic of ToIP-based systems.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="InteroperableSystems">
        <rdfs:subClassOf rdf:resource="#ToIPProperty"/>
        <rdfs:label>Interoperable Systems</rdfs:label>
        <rdfs:comment>Represents the interoperability feature of ToIP.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="TechnicalConsiderations">
        <rdfs:subClassOf rdf:resource="#ToIPProperty"/>
        <rdfs:label>Technical Considerations</rdfs:label>
        <rdfs:comment>Encapsulates technical design and requirements of the ToIP framework.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="GovernanceConsiderations">
        <rdfs:subClassOf rdf:resource="#ToIPProperty"/>
        <rdfs:label>Governance Considerations</rdfs:label>
        <rdfs:comment>Includes governance rules and policies within the ToIP framework.</rdfs:comment>
    </owl:Class>

    <!-- ToIP Structure Overview -->
    <owl:Class rdf:ID="ToIPStructure">
        <rdfs:label>ToIP Structure</rdfs:label>
        <rdfs:comment>Represents the structural components of the ToIP framework.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="HourglassModel">
        <rdfs:subClassOf rdf:resource="#ToIPStructure"/>
        <rdfs:label>Hourglass Model</rdfs:label>
        <rdfs:comment>Describes the hourglass-shaped model used in ToIP.</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="FourLayers">
        <rdfs:subClassOf rdf:resource="#ToIPStructure"/>
        <rdfs:label>Four Layers</rdfs:label>
        <rdfs:comment>Represents the four-layer structure of the ToIP framework.</rdfs:comment>
    </owl:Class>

</rdf:RDF>
