<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
         xmlns:ssi="http://example.org/ssi#">

    <!-- Ontology Definition -->
    <owl:Ontology rdf:about="http://example.org/ssi">
        <rdfs:comment>Ontology for the principles of Self-Sovereign Identity by Christopher Allen</rdfs:comment>
    </owl:Ontology>

    <!-- Class: SelfSovereignIdentityPrinciple -->
    <owl:Class rdf:about="http://example.org/ssi#SelfSovereignIdentityPrinciple">
        <rdfs:label>Self-Sovereign Identity Principle</rdfs:label>
        <rdfs:comment>A principle that defines the characteristics of Self-Sovereign Identity</rdfs:comment>
    </owl:Class>

    <!-- Subclasses of SelfSovereignIdentityPrinciple -->
    
    <owl:Class rdf:about="http://example.org/ssi#Existence">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Individuals must exist independently from identity systems</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Control">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Users must have full control over their identity</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Access">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Users must have access to their identity data at any time</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Portability">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Identities must be portable across different platforms</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Interoperability">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Identities should work across different systems and services</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Persistence">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Identities should be durable over time</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Consent">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Users must give explicit consent before sharing identity data</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#MinimalDisclosure">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Only necessary identity data should be disclosed</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#Transparency">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Identity systems should be transparent and understandable</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:about="http://example.org/ssi#RightsProtection">
        <rdfs:subClassOf rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Identity systems should protect the rights of individuals</rdfs:comment>
    </owl:Class>

    <!-- Relationships between principles -->

    <owl:ObjectProperty rdf:about="http://example.org/ssi#requires">
        <rdfs:domain rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:range rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>Defines a dependency between principles</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:about="http://example.org/ssi#enhances">
        <rdfs:domain rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:range rdf:resource="http://example.org/ssi#SelfSovereignIdentityPrinciple"/>
        <rdfs:comment>One principle strengthens or improves another</rdfs:comment>
    </owl:ObjectProperty>

    <!-- Relationships between specific principles -->

    <rdf:Description rdf:about="http://example.org/ssi#Access">
        <ssi:requires rdf:resource="http://example.org/ssi#Control"/>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ssi#RightsProtection">
        <ssi:enhances rdf:resource="http://example.org/ssi#Consent"/>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ssi#Persistence">
        <ssi:requires rdf:resource="http://example.org/ssi#Portability"/>
    </rdf:Description>

</rdf:RDF>
