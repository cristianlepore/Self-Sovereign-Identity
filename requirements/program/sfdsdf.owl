<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#">

  <!-- Definizione delle Classi -->
  <rdf:Description rdf:about="#User">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Utente</rdfs:label>
  </rdf:Description>
  
  <rdf:Description rdf:about="#Attribute">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Attributo</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#IdentityProvider">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Fornitore di Identità</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#ServiceProvider">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Fornitore di Servizi</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#DigitalIdentity">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Identità Digitale</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#SelfSovereignIdentity">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
    <rdfs:label>Self-Sovereign Identity</rdfs:label>
  </rdf:Description>

  <!-- Definizione delle Proprietà -->
  <rdf:Description rdf:about="#HasAttribute">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#User"/>
    <rdfs:range rdf:resource="#Attribute"/>
    <rdfs:label>Ha Attributo</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#IssuesAttribute">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#IdentityProvider"/>
    <rdfs:range rdf:resource="#Attribute"/>
    <rdfs:label>Rilascia Attributo</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#RequiresIdentity">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#ServiceProvider"/>
    <rdfs:range rdf:resource="#DigitalIdentity"/>
    <rdfs:label>Richiede Identità</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#ControlsIdentity">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#SelfSovereignIdentity"/>
    <rdfs:range rdf:resource="#DigitalIdentity"/>
    <rdfs:label>Controlla Identità</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#CombinesAttributes">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#User"/>
    <rdfs:range rdf:resource="#Attribute"/>
    <rdfs:label>Combinazione di Attributi</rdfs:label>
  </rdf:Description>

  <rdf:Description rdf:about="#SharesIdentity">
    <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
    <rdfs:domain rdf:resource="#User"/>
    <rdfs:range rdf:resource="#ServiceProvider"/>
    <rdfs:label>Condivide Identità</rdfs:label>
  </rdf:Description>

</rdf:RDF>
